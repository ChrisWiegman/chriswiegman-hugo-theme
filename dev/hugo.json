{
  "title": "Hugo Theme Development Site",
  "baseURL": "https://hugo.chriswiegman.com",
  "relativeURLs": true,
  "params": {
    "mainSections": [
      "posts"
    ],
    "OpenGraph": true,
    "TwitterCards": true,
    "MobileWebAppTitle": "Hugo",
    "FediverseCreator": "@chris@mastodon.chriswiegman.com",
    "description": "A development site for the Hugo theme I use on my own site.",
    "subtitle": "A minimalistic Hugo theme",
    "imageSizes": [
      850,
      710,
      300
    ],
    "imageSizeString": "(max-width: 850px) 850w, (max-width: 710px) 710w, (max-width: 300px) 300w",
    "license": {
      "name": "MIT Licensed",
      "title": "The theme code is licensed under the MIT license.",
      "link": "https://github.com/ChrisWiegman/chriswiegman-hugo-theme/blob/main/LICENSE.txt"
    },
    "policies": "/policies",
    "headerIcon": "images/2025/12/hugo-theme.png"
  },
  "minify": {
    "minifyOutput": true
  },
  "pagination": {
    "pagerSize": 10
  },
  "theme": "chriswiegman-hugo-theme",
  "themesDir": "../..",
  "html": {
    "keepDefaultAttrVals": false,
    "keepDocumentTags": false,
    "keepEndTags": false,
    "keepSpecialComments": false
  },
  "menus": {
    "main": [
      {
        "name": "About",
        "title": "About the author",
        "pageRef": "/about",
        "weight": 10
      },
      {
        "name": "Blog",
        "title": "A list of all blog posts on this site",
        "pageRef": "/blog",
        "weight": 20
      },
      {
        "name": "Contact",
        "title": "Reach me via email",
        "url": "mailto:contact@chriswiegman.com",
        "weight": 30
      }
    ],
    "footer": [
      {
        "name": "Uses",
        "title": "A great place for a uses page",
        "pageRef": "/uses",
        "weight": 10
      },
      {
        "name": "Now",
        "title": "The obligatory now page",
        "pageRef": "/now",
        "weight": 20
      },
      {
        "name": "Notes",
        "title": "The notes page",
        "pageRef": "/notes",
        "weight": 30
      },
      {
        "name": "RSS",
        "title": "Subscribe to this site in your favorite feed reader",
        "url": "/index.xml",
        "weight": 40
      }
    ]
  },
  "permalinks": {
    "posts": "/:year/:month/:slug/"
  },
  "services": {
    "rss": {
      "limit": 30
    }
  },
  "languageCode": "en-us",
  "disableHugoGeneratorInject": true,
  "cleanDestinationDir": true,
  "enableRobotsTXT": true,
  "enableGitInfo": true,
  "canonifyURLs": true,
  "disableKinds": [
    "taxonomy"
  ],
  "timeout": "90s",
  "outputs": {
    "home": [
      "HTML",
      "RSS",
      "JSON"
    ],
    "section": [
      "html",
      "JSON"
    ],
    "taxonomy": [
      "html"
    ],
    "term": [
      "html"
    ]
  },
  "markup": {
    "highlight": {
      "noClasses": false
    },
    "goldmark": {
      "parser": {
        "attribute": {
          "block": true
        },
        "wrapStandAloneImageWithinParagraph": false
      },
      "renderer": {
        "unsafe": true
      },
      "renderHooks": {
        "image": {
          "useEmbedded": "fallback"
        },
        "link": {
          "useEmbedded": "fallback"
        }
      }
    }
  }
}
